{{ form_start(form) }}
	<div class="form-group mb-4">
    	{{ form_row(form.Personne, {'attr': {'class': 'form-control selectpicker'}}) }}
	</div>
	<div class="form-group mb-4">
		{{ form_label(form.description, 'Instructions (optionnel)') }}
    	{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="row mt-4">
    	<div class="col-md mb-2">
    		<a class="btn btn-primary btn-block" href="{{ app.request.headers.get('referer') }}">Retour</a>
    	</div>
    	<div class="col-md">
    		<button class="btn btn-success btn-block">{{ button_label|default('Ajouter') }}</button>
    	</div>
    </div>
{{ form_end(form) }}
