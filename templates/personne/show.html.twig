{% extends 'base.html.twig' %}

{% block title %}Personne{% endblock %}

{% block body %}
    <h1>Personne</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ personne.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ personne.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ personne.prenom }}</td>
            </tr>
            <tr>
            <th>Role</th>
               {% for role in personne.Roles %}
                <td>
                    {{ role }}
                </td>
            {% endfor %}
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ personne.mail }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ personne.createdAt ? personne.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('personne_index') }}">back to list</a>

    <a href="{{ path('personne_edit', {'id': personne.id}) }}">edit</a>

    <a href="{{ path('manageRole_edit', {'id': personne.id}) }}">Ajouter un rôle </a>

    <a href="{{ path('manageRole_remove', {'id': personne.id}) }}">Supprimer un rôle </a>

    {{ include('personne/_delete_form.html.twig') }}
{% endblock %}
