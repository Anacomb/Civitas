{{ form_start(form) }}
    <div class="row mb-3" style="margin: 0 auto;">
        <div class="col-3">
            {{ form_label(form.nom, "Nom") }}
            {{ form_widget(form.nom, {'value': active_nom, 'attr': {'class': 'form-control', 'placeholder': 'nom du problème'}}) }}
        </div>
        <div class="col-3">
            {{ form_label(form.categories, "Catégorie") }}
            {{ form_widget(form.categories, {'attr': {'class': 'custom-select form-control selectpicker'}}) }}
        </div>
        <div class="col-2">
            {{ form_label(form.statuts, "Statut") }}
            {{ form_widget(form.statuts, {'attr': {'class': 'custom-select form-control selectpicker'}}) }}
        </div>
        <div class="col-2">
            {{ form_label(form.element, "Nombre d'éléments") }}
            {{ form_widget(form.element, {'value': active_categories, 'attr': {'class': 'custom-select form-control selectpicker'}}) }}
        </div>
        <div class="col-2">
            {{ form_label(form.orderby, "Trier par :") }}
            {{ form_widget(form.orderby, {'value': active_orderby, 'attr': {'class': 'custom-select form-control selectpicker'}}) }}
            <div id="tooltip_container"></div>
        </div>
    </div>
    <div class="row mb-5" style="margin: 0 auto;">
        <div class="col-md-10">
            <button type="submit" class="btn btn-block btn-success" data-toggle="tooltip" data-placement="bottom" title="Recherche avancée"><i class="fa fa-search"></i></button>
        </div>
        <div class="col-md-2">
            <a href={{ path("probleme_search_reset") }} class="btn btn-block btn-secondary text-white" data-toggle="tooltip" data-placement="bottom" title="Réinitialiser les critères de recherche"><i class="fa fa-times"></i></a>
        </div>
    </div>
{{ form_end(form) }}