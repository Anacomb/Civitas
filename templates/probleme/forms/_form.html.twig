{{ form_start(form) }}
    <div class="form-group">
    	{{ form_row(form.titre, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
    	{{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
    	{{ form_row(form.localisation, {'value': adresse, 'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
    	{{ form_row(form.Categorie, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
    	{{ form_row(form.Priorite, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {% if images is defined %}
            <h4 class="text-primary section">Liste des images</h4>
            <div class="zoom-gallery">
                {% for image in images %}
                    <a href="{{ asset('/probleme/'~image.url) }}">
                        <img class="img-thumbnail" src="{{ asset('/probleme/'~image.url) }}">
                    </a>
                {% endfor %}
            </div>
        {% endif %}
    </div>
    <div class="form-group">
    	{{ form_row(form.Image1, {'attr': {'class': 'form-control'}}) }}
    	{{ form_row(form.Image2, {'attr': {'class': 'form-control'}}) }}
    	{{ form_row(form.Image3, {'attr': {'class': 'form-control'}}) }}
    	{{ form_row(form.Image4, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="row">
        <div class="col">
            <a class="btn btn-primary btn-lg btn-block" href="{{ path('commune_index') }}">back to list</a>
        </div>
        <div class="col">
            <button class="btn btn-success btn-lg btn-block">{{ button_label|default('Save') }}</button>
        </div>
    </div>
{{ form_end(form) }}
