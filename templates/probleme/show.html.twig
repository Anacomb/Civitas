{% extends 'base.html.twig' %}

{% block title %}Probleme{% endblock %}

{% block body %}
    <h1>Probleme</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ probleme.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ probleme.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ probleme.description }}</td>
            </tr>
            <tr>
                <th>Date_de_declaration</th>
                <td>{{ probleme.dateDeDeclaration ? probleme.dateDeDeclaration|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ probleme.localisation }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ probleme.reference }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('probleme_index') }}">back to list</a>

    <a href="{{ path('probleme_edit', {'id': probleme.id}) }}">edit</a>

    {{ include('probleme/_delete_form.html.twig') }}
{% endblock %}
