<script type="text/javascript">
	$(document).ready(function() {
		$('#modal_statut').on('show.bs.modal', function (e) {
	        let url = e.relatedTarget.href;
	        $.get(url, function (data) {
	            $('.modal-body').html(data);
	            $('.selectpicker').selectpicker('show');
	        });
	    })
	});
</script>
