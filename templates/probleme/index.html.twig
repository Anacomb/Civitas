{% extends 'base.html.twig' %}

{% block title %}Probleme index{% endblock %}

{% block body %}

    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Liste des problèmes</h1>
        </div>
    </div>
    <div class="container">

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Localisation</th>
                    <th>Reference</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for probleme in problemes %}
                <tr>
                    <td>{{ probleme.id }}</td>
                    <td>{{ probleme.titre }}</td>
                    <td>{{ probleme.description }}</td>
                    <td>{{ probleme.localisation }}</td>
                    <td>{{ probleme.reference }}</td>
                    <td>
                        <a href="{{ path('probleme_show', {'id': probleme.id}) }}">show</a>
                        <a href="{{ path('probleme_edit', {'id': probleme.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <nav aria-label="Page navigation">
            <ul class="pagination pagination-primary justify-content-center">
                {% if active_page == 1 %}
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Précédent</a>
                    </li>
                {% else %}
                    <li class="page-item">
                        <a class="page-link" href="/probleme/1"><<</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="/probleme/{{ active_page - 1 }}">Précédent</a>
                    </li>
                {% endif %}       
                {% if active_page == nbr_page %}
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Suivant</a>
                    </li>
                {% else %}
                    <li class="page-item">
                        <a class="page-link" href="/probleme/{{ active_page + 1 }}">Suivant</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="/probleme/{{ nbr_page }}">>></a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    </div>

    <a href="{{ path('probleme_new') }}">Create new</a>
{% endblock %}
