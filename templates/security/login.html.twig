{% extends 'base.html.twig' %}

{% block title %}Connectez-vous!{% endblock %}

{% block body %}
    
    {% if error %}
        <div class="alert alert-danger my-2 mx-1 text-center"><h1>{{ error.messageKey|trans(error.messageData, 'security') }}</h1></div>
    {% endif %}

    <div class="page-center-container">
        <div class="content fill text-center">
            {% if app.user %}
                <div class="mb-3">
                    Vous êtes déjà connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% else %}
                <form method="post">
                    
                    <h1 class=" mb-5 text-primary">Veuillez saisir vos identifiants</h1>
                    
                    <div class="input-group input-group-lg mb-3">
                            <div class="increase-field-email input-group-prepend">
                            <label class="input-group-text" for="inputMail">Email</label>
                        </div>
                        <input type="text" value="{{ last_username }}" name="mail" id="inputMail" class="form-control" required autofocus>
                    </div>
                    <div class="input-group input-group-lg mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputPassword">Mot de passe</label>
                        </div>
                        <input type="password" name="password" id="inputPassword" class="form-control" required>
                    </div>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}
                    <div class="row mt-4">
                        <div class="col-3">
                            <a class="btn btn-lg btn-secondary btn-block" href={{ path('reset_password') }}> Mot de passe oublié ?</a>
                        </div>
                        <div class="col">
                            <button class="btn btn-lg btn-primary btn-block" type="submit"> Se connecter </button>
                        </div>
                    </div>
                </form>
            {% endif %}
        </div>
    </div>
{% endblock %}
