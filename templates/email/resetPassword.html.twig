{% include 'email/style.html.twig' %}
{% block body %}
    <div class="card-display">
        <div class="card card-center-content">
            <div class="title">
                Réinitialisation de votre mot de passe
            </div>
            <div class="card-body">
                <div>
                    Bonjour <b>{{ personne.nom }} {{ personne.prenom }}</b>.
                </div>
                <div style="margin-top: 1%">
                    Pour réinitialiser votre mot de passe, veuillez cliquez sur ce lien :
                </div>
                <div style="margin-top: 1%">
                   <b> <a href={{  absolute_url(path('reset_passwordConfirmed', {'resetPasswordToken': resetPasswordToken})) }}>Changer mon mot de passe</a></b>.
                </div>
            </div>
        </div>
    </div>
{% endblock %}

